/ <div class="user enabled role_#{Site.current.role_for(user).name}">
.user.enabled
  = raw link_logo_image(user, :size => '32', :title => user.name, :url => user_path(user), :class => 'logo logo-user')

  %ul.group_links
    - if Site.current.require_registration_approval? && !user.approved?
      = link_to approve_user_path(user), :method => :post, :confirm => t('.approve_confirm') do
        = icon_approve(:alt => t('.approve'), :title => t('.approve'))
    = link_to (edit_user_path(user)) do
      = icon_edit(:alt => t('edit'), :title => t('edit'))
    = link_to user_path(user), :confirm => t('are_you_sure'), :method => :delete do
      = icon_delete(:alt => t('disable'), :title => t('user.disable'))

  .user_data
    %ul
      %li.main_text
        = t('name.one') + ":"
        %span.unified_user
          = sanitize link_to(user.name, user_path(user))
      %li.main_text
        = t('user.category') + ":"
        = user_category_name(user)
      %li.main_text.institution-name
        = link_to user.institution.name, user_permissions_institution_path(user.institution) if user.institution
