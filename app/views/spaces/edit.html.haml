- spaces_menu_at :admin
= render :partial => 'spaces/menu'

- spaces_admin_menu_at :main
= render :partial => 'admin_tabs'

#edit-space
  %h1= t('space.configuration')

  .right-column
    #edit-space-current-logo
      = logo_image(@space, :size => '168x128', :class => 'logo')
    = simple_form_for @space, :html => { :multipart => true, :class => 'form-for-crop', :'data-crop-target-image' => '#edit-space-current-logo' } do |f|
      = link_to t('.change_logo'), '#space_logo_image', :'data-open-file' => true
      = f.input :logo_image, :as => :file, :id => 'space_logo_image'

  = simple_form_for @space, :html => { :method => :put, :class => 'single-column' } do |f|
    .left-column
      = f.input :name
      = f.input :description, :as => :text, :input_html => { :rows => 5 }
      = f.input :repository
      = f.input :public, :label => t('.public')
      %h3= t('.webconf_options')
      = f.simple_fields_for :bigbluebutton_room do |bbb_room|
        = bbb_room.input :attendee_password, :as => :showable_password
        = bbb_room.input :moderator_password, :as => :showable_password

    - if user_signed_in? && current_user.superuser
      #management-options.alert.alert-gray
        %h3= t('.management_options')
        - current_institution = @space.institution.name if @space.institution
        = f.input :institution_name, :required => false, :placeholder => current_institution

    = f.button :wrapped, :value => t("_other.update")

  #edit-space-other-options
    %h3= t('.other_options')
    .alert.alert-danger
      %span= t('.delete_space')
      = link_to t('.yes_delete'), space_path(@space), :data => { :confirm => t("are_you_sure") }, :method => :delete, :class => 'btn btn-small btn-danger'
