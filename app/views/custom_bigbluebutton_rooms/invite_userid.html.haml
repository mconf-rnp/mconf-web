= render_page_title t(".title", :name => @room.name).html_safe

= render :partial => "invite_header", :locals => { :page => 1 }

#webconf-room-userid

  #login-box
    .header= t(".login_title")
    .content
      = render 'sessions/login_form'

    .content-right
      .title= t(".non_member.title")
      = simple_form_for @room, :url => invite_bigbluebutton_room_path(@room), :method => "get" do |f|
        .input
          = text_field_tag "user[name]", "", required: true, placeholder: t(".non_member.name")
        = f.submit value: t(".non_member.next"), class: 'btn btn-submit'

= render 'frontpage/footer_guides'
